<Window x:Class="CryptoVariants.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoVariants"
        mc:Ignorable="d"
        Icon="https://cdn-icons-png.freepik.com/512/16863/16863180.png"
        Title="Вход в аккаунт" Height="450" Width="400">
    <Grid>
        <Border Background="#003049">
            <StackPanel>
                <TextBlock HorizontalAlignment="Center" Margin="40" Foreground="#fff" FontSize="18" Height="40" VerticalAlignment="Top">Авторизация</TextBlock>
                <Label Margin="20 0 10 0" Foreground="#fff">Логин</Label>
                <TextBox x:Name="Login" Margin="20 0 20 40" Height="30" FontSize="16"/>
                <Label Margin="20 0 10 0" Foreground="#fff" >Пароль</Label>
                <PasswordBox x:Name="Password" Margin="20 0 20 0" Height="30" FontSize="16"/>
                <Button Width="200" Margin="40" Background="#eb5e28" Foreground="#fff" Height="30" FontWeight="DemiBold" Click="Button_Click">Войти</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
